---
const categories = [{ id: 'deep-learning', name: '深度学习', count: 1 }]

const years = [
  { id: 'y2025', year: 2025, count: 1 },
  { id: 'y2024', year: 2024, count: 2 },
]
---

<aside class='space-y-8'>
  <input
    type='search'
    placeholder='搜索文章...'
    class='w-full p-3 bg-dark-secondary rounded border border-gray-700 focus:ring-2 focus:ring-green-500'
  />

  <div class='bg-dark-secondary p-6 rounded-lg'>
    <h3
      class='text-green-500 text-lg font-semibold mb-4 pb-2 border-b border-gray-700'
    >
      分类
    </h3>
    <ul class='space-y-2'>
      {
        categories.map(category => (
          <a href='#'>
            <li class='py-2 border-b border-gray-700 last:border-0'>
              {category.name} ({category.count})
            </li>
          </a>
        ))
      }
    </ul>
  </div>

  <div class='bg-dark-secondary p-6 rounded-lg'>
    <h3
      class='text-green-500 text-lg font-semibold mb-4 pb-2 border-b border-gray-700'
    >
      年份归档
    </h3>
    <ul class='space-y-2'>
      {
        years.map(year => (
          <a href='#'>
            <li class='py-2 border-b border-gray-700 last:border-0'>
              {year.year} ({year.count})
            </li>
          </a>
        ))
      }
    </ul>
  </div>
</aside>
