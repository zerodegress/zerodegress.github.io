---
import PostListItem from './PostListItem.astro'
import { getCollection } from 'astro:content'

interface Props {
  posts: ReturnType<typeof getCollection> extends Promise<infer T> ? T : never
}

const { posts } = Astro.props
---

<ul>
  {posts.map(post => <PostListItem slug={post.slug} data={post.data} />)}
</ul>
