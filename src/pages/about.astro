---
import BaseHead from '../components/BaseHead.astro'
import Nav from '../components/Nav.astro'

const mail = () => {
  return 'zero' + 'degress' + '@o' + 'utlook.c' + 'om'
}
---

<html lang='zh-CN' class='dark'>
  <head>
    <BaseHead
      title='关于我'
      description='全栈开发者 | 开源贡献者 | 技术博客作者'
    />
  </head>

  <body class='bg-dark text-gray-100 min-h-screen'>
    <Nav title='冰窖' />

    <main class='container mx-auto px-4 py-8'>
      <div class='grid md:grid-cols-3 gap-8'>
        {/* 主要内容 */}
        <div class='space-y-8 md:col-span-2'>
          <div class='max-w-3xl mx-auto px-4 py-8 space-y-8'>
            {/* 个人简介 */}
            <section class='bg-dark-800 p-6 rounded-xl shadow-xl'>
              <h2 class='text-2xl font-bold text-primary-400 mb-4'>
                👋 你好，我是冰点启航
              </h2>
              <p class='text-gray-300 mb-4'>全栈开发者：</p>
              <div class='flex flex-wrap gap-3'>
                <span
                  class='bg-dark-700 text-primary-400 px-4 py-2 rounded-full text-sm'
                  >Rust</span
                >
                <span
                  class='bg-dark-700 text-primary-400 px-4 py-2 rounded-full text-sm'
                  >Scala</span
                >
                <span
                  class='bg-dark-700 text-primary-400 px-4 py-2 rounded-full text-sm'
                  >JavaScript/TypeScript</span
                >
                <span
                  class='bg-dark-700 text-primary-400 px-4 py-2 rounded-full text-sm'
                  >React/SolidJS</span
                >
                <span
                  class='bg-dark-700 text-primary-400 px-4 py-2 rounded-full text-sm'
                  >Node.js/Deno</span
                >
                <span
                  class='bg-dark-700 text-primary-400 px-4 py-2 rounded-full text-sm'
                  >Astro</span
                >
                <span
                  class='bg-dark-700 text-primary-400 px-4 py-2 rounded-full text-sm'
                  >Python</span
                >
              </div>
            </section>

            {/* 经历时间轴 */}
            <section class='bg-dark-800 p-6 rounded-xl shadow-xl'>
              <h3 class='text-xl font-semibold text-primary-400 mb-6'>
                📌 主要经历
              </h3>
              <div class='border-l-2 border-dark-600 pl-6 space-y-8'>
                <div class='relative'>
                  <div
                    class='absolute w-3 h-3 bg-primary-400 rounded-full -left-[7px] top-2'
                  >
                  </div>
                  <h4 class='text-lg font-medium text-gray-100'>
                    开源贡献者 @GitHub
                  </h4>
                  <time class='text-sm text-gray-400'>2024 - 至今</time>
                  <p class='mt-2 text-gray-300'>积极参与开源软件开发</p>
                </div>
              </div>

              {/* 联系方式 */}
              <section class='bg-dark-800 p-6 rounded-xl shadow-xl'>
                <h3 class='text-xl font-semibold text-primary-400 mb-6'>
                  📮 保持联系
                </h3>
                <div class='flex flex-wrap gap-4'>
                  <a
                    href='https://github.com/zerodegress'
                    class='flex items-center gap-2 text-gray-300 hover:text-primary-400 transition-colors'
                    target='_blank'
                    rel='noopener'
                  >
                    <svg
                      class='w-6 h-6'
                      fill='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        fill-rule='evenodd'
                        d='M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z'
                        clip-rule='evenodd'></path>
                    </svg>
                    GitHub
                  </a>
                  <a
                    href={`mailto:${mail()}`}
                    class='flex items-center gap-2 text-gray-300 hover:text-primary-400 transition-colors'
                  >
                    <svg
                      class='w-6 h-6'
                      fill='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        d='M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z'
                      ></path>
                    </svg>
                    {mail()}
                  </a>
                </div>
              </section>
            </section>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
